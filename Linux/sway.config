focus_follows_mouse no
workspace_layout tabbed
default_border none
default_floating_border pixel 1
font pango:monospace 10
# class                 border  backgr. text    indicator child_border
client.focused          #dddddd #ffffff #444444 #dddddd   #dddddd
client.focused_inactive #dddddd #ffffff #444444 #dddddd   #dddddd
client.unfocused        #dddddd #dddddd #777777 #dddddd   #dddddd
client.urgent           #dddddd #900000 #ffffff #dddddd   #dddddd
titlebar_padding 4 2
for_window [title="."] title_format "%app_id%class"

for_window [class=Atom] move workspace atom; workspace atom; layout splitv; mode atom
for_window [app_id=Alacritty] move workspace linux

exec alacritty
exec "atom --wait; swaymsg workspace linux; swaymsg mode default"

bindsym Mod1+Tab \
  exec "pgrep -x atom >/dev/null || (atom --wait; swaymsg workspace linux; swaymsg mode default)"; \
  workspace atom; mode "atom"
bindsym Mod1+Escape kill
bindsym Mod1+space exec alacritty
bindsym Mod1+Next focus right
bindsym Mod1+Prior focus left

mode "atom" {
  bindsym Mod1+Tab workspace linux; mode "default"
  bindsym Mod1+Escape kill
}

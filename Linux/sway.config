focus_follows_mouse no
workspace_layout tabbed
default_border pixel 1
default_floating_border pixel 1
hide_edge_borders --i3 smart
titlebar_border_thickness 4
titlebar_padding 6 6
font pango:monospace 0
# class                 border  backgr. text    indicator child_border
client.focused          #222222 #4285F4 #4285F4 #222222   #222222
client.focused_inactive #222222 #4285F4 #4285F4 #222222   #222222
client.unfocused        #222222 #cccccc #cccccc #aaaaaa   #aaaaaa
client.urgent           #222222 #cccccc #cccccc #aaaaaa   #aaaaaa

set $gnome-schema org.gnome.desktop.interface
exec_always {
  gsettings set $gnome-schema gtk-theme Materia-light-compact
  gsettings set $gnome-schema font-name Sans
}

for_window [class=Chromium tiling] floating enable; \
  exec swaymsg "[class=Chromium] resize set 90 ppt 90 ppt, move position center"; \
  exec swaymsg "[class=Chromium] move scratchpad, scratchpad show"
for_window [app_id=sakura tiling] floating enable; \
  exec swaymsg "[app_id=sakura] resize set 60 ppt 90 ppt, move position center"; \
  exec swaymsg "[app_id=sakura] move scratchpad, scratchpad show"
for_window [title="."] fullscreen disable
for_window [app_id="^(?!sakura$)"] exec swaymsg [app_id=sakura] move scratchpad
for_window [class="^(?!Sakura$)"] exec swaymsg [app_id=sakura] move scratchpad

exec atom --wait

bindsym Mod1+Tab [class=Chromium] scratchpad show; \
  exec "pgrep -f '^\S*chromium$' >/dev/null || chromium"; \
  exec swaymsg [app_id=sakura] move scratchpad
bindsym Mod1+grave [app_id=sakura] scratchpad show; \
  exec "pgrep -f '^\S*sakura$' >/dev/null || sakura"; \
  exec swaymsg [class=Chromium] move scratchpad

bindsym Mod1+Next focus right
bindsym Mod1+Prior focus left
bindsym Mod1+Escape kill

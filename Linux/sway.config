focus_follows_mouse no
workspace_layout tabbed
default_border none
default_floating_border pixel 1
titlebar_padding 2 2
font pango:monospace 0
# class                 border  backgr. text    indicator child_border
client.focused          #000000 #4285F4 #4285F4 #000000   #000000
client.focused_inactive #000000 #4285F4 #4285F4 #000000   #000000
client.unfocused        #000000 #dddddd #dddddd #000000   #000000
client.urgent           #000000 #900000 #900000 #000000   #000000

for_window [class=Atom] floating enable, resize set 100 ppt 100 ppt, move position center
for_window [class=Chromium] floating enable, resize set 100 ppt 100 ppt, move position center

exec --no-startup-id \
  "while true; do alacritty || break; pgrep -x alacritty >/dev/null && break; done"
exec --no-startup-id "while true; do chromium || break; done"
exec --no-startup-id "while true; do atom --wait || break; done"

bindsym Super_R focus right
bindsym Super_L focus right

bindsym Control+Super_R [floating] move scratchpad; mode "terminals"
bindsym Control+Super_L [floating] move scratchpad; mode "terminals"

mode "terminals" {
  bindsym Super_R focus right
  bindsym Super_L focus right

  bindsym Control+Super_R [floating] move scratchpad, scratchpad show; mode "default"
  bindsym Control+Super_L [floating] move scratchpad, scratchpad show; mode "default"
}

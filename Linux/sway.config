focus_follows_mouse no
workspace_layout tabbed
default_border pixel 1
default_floating_border pixel 1
hide_edge_borders --i3 smart
titlebar_border_thickness 4
font pango:monospace 3
# class                 border  backgr. text    indicator child_border
client.focused          #222222 #4285F4 #4285F4 #222222   #222222
client.focused_inactive #222222 #4285F4 #4285F4 #222222   #222222
client.unfocused        #222222 #cccccc #cccccc #aaaaaa   #aaaaaa
client.urgent           #222222 #cccccc #cccccc #aaaaaa   #aaaaaa

set $gnome-schema org.gnome.desktop.interface
exec_always {
  gsettings set $gnome-schema gtk-theme Materia-light-compact
  gsettings set $gnome-schema font-name Sans
}

for_window [class=Chromium tiling] floating enable, move scratchpad, scratchpad show, \
  resize set 90 ppt 90 ppt, move position center
for_window [app_id=Alacritty tiling] floating enable, move scratchpad, scratchpad show, \
  resize set 60 ppt 90 ppt, move position center

exec "atom --wait; \
  swaymsg [app_id=Alacritty] focus; \
  pgrep -x alacritty >/dev/null || alacritty; \
  swaymsg [class=Chromium] move scratchpad"

bindsym Mod1+Tab [class=Chromium] scratchpad show; \
  exec "pgrep -x chromium >/dev/null || chromium"; \
  exec swaymsg [app_id=Alacritty] move scratchpad
bindsym Mod1+grave [app_id=Alacritty] scratchpad show; \
  exec "pgrep -x alacritty >/dev/null || alacritty"; \
  exec swaymsg [class=Chromium] move scratchpad

bindsym Mod1+Next focus right
bindsym Mod1+Prior focus left
bindsym Mod1+Escape kill

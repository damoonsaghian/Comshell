focus_follows_mouse no
default_border none
default_floating_border pixel 1
hide_edge_borders --i3 smart
workspace_layout tabbed
titlebar_padding 2 2
font pango:monospace 0
# class                 border  backgr. text    indicator child_border
client.focused          #000000 #ffffff #ffffff #dddddd   #dddddd
client.focused_inactive #000000 #ffffff #ffffff #dddddd   #dddddd
client.unfocused        #000000 #aaaaaa #aaaaaa #dddddd   #dddddd
client.urgent           #000000 #900000 #900000 #dddddd   #dddddd

set $gnome-schema org.gnome.desktop.interface
exec_always {
  gsettings set $gnome-schema gtk-theme Materia-light-compact
  gsettings set $gnome-schema font-name Sans
}

workspace atom; exec "while true; do atom --wait || break; done"

bindsym Mod1+Tab workspace chromium; mode not-atom; \
  exec "pgrep -x chromium >/dev/null || chromium"

set $rofi exec rofi -modi drun -show drun -show-icons
bindsym Mod1+space $rofi

bindsym Mod1+Next focus right
bindsym Mod1+Prior focus left
bindsym Mod1+Escape kill

mode not-atom {
  bindsym Mod1+Tab workspace atom; mode default
  bindsym Mod1+space $rofi

  bindsym Mod1+Next focus right
  bindsym Mod1+Prior focus left
  bindsym Mod1+Escape kill
}

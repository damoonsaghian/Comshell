focus_follows_mouse no
workspace_layout tabbed
default_border pixel 1
default_floating_border pixel 1
hide_edge_borders --i3 smart
titlebar_border_thickness 0
titlebar_padding 0 0
font pango:monospace 0
# class                 border  backgr. text    indicator child_border
client.focused          #000000 #000000 #000000 #222222   #222222
client.focused_inactive #000000 #000000 #000000 #222222   #222222
client.unfocused        #000000 #000000 #000000 #aaaaaa   #aaaaaa
client.urgent           #000000 #000000 #000000 #aaaaaa   #aaaaaa

for_window [workspace=atom class="^(?!Atom$)" tiling] floating enable; \
  exec 'swaymsg "resize set 90 ppt 95 ppt, move position center"'
for_window [workspace=atom app_id="^(?!atom$|sakura$|mpv$)" tiling] floating enable; \
  exec 'swaymsg "resize set 90 ppt 95 ppt, move position center"'
for_window [app_id=sakura tiling] floating enable; \
  exec 'swaymsg "resize set 60 ppt 95 ppt, move position center"'
for_window [app_id=mpv tiling] floating enable

bindsym Mod1+Tab [class=Chromium] move workspace current, focus; \
  exec "swaymsg [app_id=chromium] move workspace current, focus"; \
  exec "swaymsg [app_id=sakura] move scratchpad"; \
  exec "pgrep -f '^\S*chromium$' >/dev/null || chromium"
bindsym Mod1+grave [app_id=sakura] move workspace current, focus; \
  exec "swaymsg [class=Chromium] move scratchpad"; \
  exec "swaymsg [app_id=chromium] move scratchpad"; \
  exec "pgrep '^sakura$' >/dev/null || sakura"
bindsym --release Alt_L [app_id=sakura] move scratchpad; \
  exec "swaymsg [class=Chromium] move scratchpad"; \
  exec "swaymsg [app_id=chromium] move scratchpad"; \
  exec "pgrep '^atom$' >/dev/null || ( swaymsg [workspace=atom] kill; atom; )"
bindsym --release Alt_R [app_id=sakura] move scratchpad; \
  exec "swaymsg [class=Chromium] move scratchpad"; \
  exec "swaymsg [app_id=chromium] move scratchpad"; \
  exec "pgrep '^atom$' >/dev/null || ( swaymsg [workspace=atom] kill; atom; )"
bindsym Mod1+space workspace atom
bindsym Mod1+Prior focus left
bindsym Mod1+Next focus right
bindsym Mod1+Escape kill
bindsym --release Mod1+Shift+z exec "systemctl suspend"

workspace atom
exec "comshell || atom || sakura"

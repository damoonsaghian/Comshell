focus_follows_mouse no
workspace_layout tabbed
default_border pixel 1
default_floating_border pixel 1
hide_edge_borders --i3 smart
titlebar_border_thickness 0
titlebar_padding 0 0
font pango:monospace 0
# class                 border  backgr. text    indicator child_border
client.focused          #000000 #000000 #000000 #222222   #222222
client.focused_inactive #000000 #000000 #000000 #222222   #222222
client.unfocused        #000000 #000000 #000000 #aaaaaa   #aaaaaa
client.urgent           #000000 #000000 #000000 #aaaaaa   #aaaaaa

for_window [app_id=sakura tiling] floating enable; \
  exec swaymsg "[app_id=sakura] resize set 60 ppt 90 ppt, move position center"
for_window [app_id='^(?!sakura$)' tiling] splitv, layout stacking

bindsym Mod1+Tab focus left; \
  exec swaymsg "[app_id=sakura] move scratchpad"; \
  exec swaymsg "[workspace=__focused__ app_id='^(?!sakura$)' floating] kill"
bindsym Mod1+grave [app_id=sakura] scratchpad show; \
  exec "pgrep '^sakura$' >/dev/null || sakura"
bindsym Mod1+space workspace atom; \
  exec swaymsg "[app_id=sakura] move scratchpad"; \
  exec swaymsg "[workspace=atom app_id='^(?!sakura$)' floating] kill"; \
  exec "pgrep '^atom$' >/dev/null || ( swaymsg focus parent; atom; )"; \
  exec "pgrep -f '^\S*chromium$' >/dev/null || ( swaymsg focus parent; chromium; )"

bindsym Mod1+Escape kill
bindsym Mod1+Shift+s exec "sleep 0.5; systemctl suspend"

bar {
  swaybar_command waybar
}

workspace atom
exec "swaymsg focus parent; chromium"
exec "swaymsg focus parent; atom"

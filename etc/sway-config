focus_follows_mouse no
workspace_layout tabbed
default_border pixel 1
default_floating_border pixel 1
hide_edge_borders --i3 smart
titlebar_border_thickness 0
titlebar_padding 0 0
font pango:monospace 0
# class                 border  backgr. text    indicator child_border
client.focused          #000000 #000000 #000000 #222222   #222222
client.focused_inactive #000000 #000000 #000000 #222222   #222222
client.unfocused        #000000 #000000 #000000 #aaaaaa   #aaaaaa
client.urgent           #000000 #000000 #000000 #aaaaaa   #aaaaaa

for_window [workspace=atom app_id="^(?!atom$)" window_role=normal] \
  resize set 90 ppt 90 ppt, move position center
for_window [workspace=atom class="^(?!Atom$)" window_role=normal] \
  resize set 90 ppt 90 ppt, move position center
mode atom {
  bindsym Mod1+Tab workspace chromium; exec "pgrep -f '^\S*chromium$' >/dev/null \
    || ( swaymsg [workspace=atom floating] kill; chromium; )"; \
    mode chromium
  bindsym Mod1+grave
}

for_window [workspace=chromium app_id="^(?!chromium$)" window_role=normal] \
  resize set 90 ppt 90 ppt, move position center
for_window [workspace=chromium class="^(?!Chromium$)" window_role=normal] \
  resize set 90 ppt 90 ppt, move position center
mode chromium {
  bindsym Mod1+Tab \
    mode atom
  bindsym Mod1+grave workspace
}

for_window [workspace=terminal app_id="^(?!sakura$)" window_role=normal] \
  resize set 90 ppt 90 ppt, move position center
for_window [workspace=terminal class="^(?!Sakura$)" window_role=normal] \
  resize set 90 ppt 90 ppt, move position center
mode terminal {
  bindsym Mod1+Tab workspace back_and_forth
  bindsym Mod1+grave
}

workspace atom
mode atom
exec atom

bindsym Mod1+space workspace atom; exec "pgrep '^atom$' >/dev/null \
  || ( swaymsg [workspace=atom] kill; atom; )"
bindsym Mod1+Escape kill
bindsym Mod1+Shift+s exec "sleep 0.5; systemctl suspend"

bar {
  swaybar_command waybar
}

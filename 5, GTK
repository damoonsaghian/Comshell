; sudo pacman -S gtksourceview3 webkit2gtk gst-plugins-{base,good,bad} gst-libav \
  materia-gtk-theme

; mkdir -p ~/.config/gtk-3.0
; nano ~/.config/gtk-3.0/settings.ini
  [Settings]
  gtk-theme-name = Materia-light-compact
  gtk-font-name = Sans
; gsettings set org.gnome.desktop.interface gtk-theme Materia-light-compact
; gsettings set org.gnome.desktop.interface font-name Sans
; cp gtk.css ~/.config/gtk-3.0/

; cargo build --release
; mkdir ~/.bin
; sudo cp target/release/comshell /usr/local/bin/

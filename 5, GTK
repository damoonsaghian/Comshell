; sudo pacman -S gtk3 gtksourceview3 webkit2gtk gst-plugins-{base,good,bad} gst-libav \
  materia-gtk-theme sway xorg-server-xwayland

; mkdir -p ~/.config/gtk-3.0; nano ~/.config/gtk-3.0/settings.ini
  [Settings]
  gtk-theme-name = Materia-light-compact
  gtk-font-name = Sans

; nano ~/.bash_profile
  sway
; mkdir -p ~/.config/sway
; nano ~/.config/sway/config
  default_border none
  exec --no-startup-id "cargo run --release --manifest-path "comshell-Cargo.toml-path"; \
    swaymsg exit"


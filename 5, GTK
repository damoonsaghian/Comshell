; sudo pacman -S gtk3 gtksourceview3 webkit2gtk gst-plugins-{base,good,bad} gst-libav

; nano ~/.bash_profile
  sway
; mkdir -p ~/.config/sway
; nano ~/.config/sway/config
  default_border none
  set $gnome-schema org.gnome.desktop.interface
  exec_always {
    gsettings set $gnome-schema gtk-theme Materia-light-compact
    gsettings set $gnome-schema font-name Sans
  }
  exec --no-startup-id "cargo run --release --manifest-path path-to-Cargo.toml; swaymsg exit"

; mkdir -p ~/.config/gtk-3.0
; cp gtk.css ~/.config/gtk-3.0/gtk.css

gradient + animation -> cursor
"https://developer.gnome.org/gtk3/stable/chap-css-properties.html"
gtk cursor-aspect-ratio style property;
in "~/.config/gtk-3.0/gtk.css":
* {
  -GtkTextView-error-underline-color: #FC4138;
  -gtk-outline-radius: 2px;
  -GtkWidget-cursor-aspect-ratio: 1;
  -GtkTextView-cursor_aspect_ratio: 1;
  -EelEditableLabe-cursor_aspect_ratio: 1;
  -GtkWidget-focus-line-width: 3;
}

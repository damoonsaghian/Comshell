workspace_layout tabbed
default_border pixel 1
default_floating_border pixel 1
hide_edge_borders --i3 smart
titlebar_border_thickness 2
titlebar_padding 3 3
font pango:monospace 0
#4285F4
# class                 border  backgr. text    indicator child_border
client.focused          #222222 #0088CC #0088CC #222222   #222222
client.focused_inactive #222222 #0088CC #0088CC #222222   #222222
client.unfocused        #222222 #cccccc #cccccc #222222   #222222
client.urgent           #222222 #cccccc #cccccc #222222   #222222

focus_follows_mouse no
focus_wrapping workspace

bindsym Mod1+a focus right
bindsym Mod1+Tab workspace next_on_output
bindsym Mod1+Escape kill; \
  exec "swaymsg '[con_id=__focused__] focus' || swaymsg workspace prev_on_output"
bindsym Mod1+space exec dbus-send --dest=org.swayshell.swayshell /org/swayshell/apps show

exec swayidle -w \
  before-sleep "dbus-send --dest=org.swayshell.swayshell /org/swayshell/lock now" \
  timeout 595 "dbus-send --dest=org.swayshell.swayshell /org/swayshell/lock start" \
  timeout 601 "swaymsg 'output * dpms off'" resume "swaymsg 'output * dpms on'"
for_window [title="."] inhibit_idle fullscreen

exec "gjs /usr/local/share/swayshell.js; swaymsg exit"

exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

workspace Comshell
exec "comshell || ~/.comshell/comshell || \
  swaymsg 'workspace Atom; exec atom' || \
	swaymsg 'workspace Alacritty; exec alacritty'"

unfortunately Pony is still not ready for developing a complex GUI application;
we have to use existing tools to develop Comshell;
"https://gitlab.gnome.org/GNOME/gjs/wikis/Home"

; sudo pacman -S sway xorg-server-xwayland materia-gtk-theme gjs
; sudo pacman -S gtk3 gtksourceview3 webkit2gtk gst-plugins-{base,good,bad} gst-libav

; nano ~/.bash_profile
  export TZ="/usr/share/zoneinfo/<your_location>"
  sway
; mkdir -p ~/.config/sway
; nano ~/.config/sway/config
  default_border none
  set $gnome-schema org.gnome.desktop.interface
  exec_always {
    gsettings set $gnome-schema gtk-theme Materia-light-compact
    gsettings set $gnome-schema font-name Sans
  }
  exec --no-startup-id "gis path-to-comshell.js; swaymsg exit"

; mkdir -p ~/.config/gtk-3.0
; cp prototype/gtk.css ~/.config/gtk-3.0/gtk.css
